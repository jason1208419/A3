<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs.group11.controllers.CreateAuctionController">
   <center>
      <VBox fx:id="fieldHolder" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <FlowPane alignment="TOP_CENTER">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <RadioButton fx:id="sculptureRadio" mnemonicParsing="false" selected="true" text="Sculpture">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </RadioButton>
                        <RadioButton fx:id="paintingRadio" mnemonicParsing="false" text="Painting" />
                     </children>
                  </VBox>
                  <BorderPane>
                     <FlowPane.margin>
                        <Insets bottom="20.0" />
                     </FlowPane.margin>
                     <center>
                        <ImageView fx:id="image" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" />
                     </center>
                  </BorderPane>
               </children>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="17.0" prefWidth="103.0" text="Title:">
                     <opaqueInsets>
                        <Insets left="10.0" />
                     </opaqueInsets>
                  </Label>
                  <TextField fx:id="title" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="17.0" prefWidth="103.0" text="Author:">
                     <opaqueInsets>
                        <Insets left="10.0" />
                     </opaqueInsets>
                  </Label>
                  <TextField fx:id="auction" />
               </children>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="17.0" prefWidth="103.0" text="Starting Price: ">
                     <opaqueInsets>
                        <Insets left="10.0" />
                     </opaqueInsets>
                  </Label>
                  <TextField fx:id="startPrice" />
               </children>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="17.0" prefWidth="103.0" text="Width:">
                     <opaqueInsets>
                        <Insets left="10.0" />
                     </opaqueInsets>
                  </Label>
                  <TextField fx:id="width" />
               </children>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="17.0" prefWidth="103.0" text="Length:">
                     <opaqueInsets>
                        <Insets left="10.0" />
                     </opaqueInsets>
                  </Label>
                  <TextField fx:id="length" />
               </children>
            </FlowPane>
            <FlowPane alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="17.0" prefWidth="103.0" text="Creation Date:">
                     <opaqueInsets>
                        <Insets left="10.0" />
                     </opaqueInsets>
                  </Label>
                  <DatePicker fx:id="creationDate" />
               </children>
            </FlowPane>
            <FlowPane fx:id="depthPane" alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="17.0" prefWidth="103.0" text="Depth:">
                     <opaqueInsets>
                        <Insets left="10.0" />
                     </opaqueInsets>
                  </Label>
                  <TextField fx:id="depth" />
               </children>
            </FlowPane>
            <FlowPane fx:id="materialPane" alignment="TOP_CENTER" columnHalignment="CENTER" rowValignment="TOP" VBox.vgrow="ALWAYS">
               <children>
                  <Label prefHeight="17.0" prefWidth="103.0" text="Material: ">
                     <opaqueInsets>
                        <Insets left="10.0" />
                     </opaqueInsets>
                  </Label>
                  <TextField fx:id="material" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </FlowPane>
            <Button fx:id="createButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" text="Create Auction" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></Button>
         </children>
         <opaqueInsets>
            <Insets left="10.0" />
         </opaqueInsets>
         <padding>
            <Insets left="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
